            <helix:ArrowVisual3D  Point1="0,0,0" Point2="12 0 0" Fill="Red" Diameter="0.5" />
            <helix:ArrowVisual3D Point1="0,0,0" Point2="0 12 0" Fill="Green" Diameter="0.5"/>
